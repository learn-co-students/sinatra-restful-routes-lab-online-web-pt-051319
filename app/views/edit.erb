<form action="/recipes/<%= @recipe.id %>" method="POST">
	<input id="hidden" type="hidden" name="_method" value="patch">
	<label for="name">Name: </label>
	<input type="text" name="name" id="name" value="@recipe.name" required>
	<label for="cook_time">Cook Time: </label>
	<input type="text" name="cook_time" id="cook_time" value="@recipe.cook_time" required>
	<label for="ingredients">Ingredients: </label>
	<textarea name="ingredients" id="ingredients" cols="100" rows="5" required><%= @recipe.ingredients %></textarea>
	<input type="submit" value="Edit Recipe">
</form>