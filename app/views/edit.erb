<form action="/recipes/<%= @recipe.id %>" method="post">
<input id="hidden" type="hidden" name="_method" value="PATCH">
  <h2> Name: </h2> <%= @recipe.name %> <input type="text" name="[name]" id="name">
  <h2> Ingredients </h2> <%= @recipe.ingredients %> <input type="text" name="[ingredients]" id="ingredients">
  <h2> Cook Time </h2> <%= @recipe.cook_time %> <input type="text" name="[cook_time]" id="cook_time">
  <input type="submit" id="submit">

</form>
